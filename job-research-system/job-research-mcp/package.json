{
  "name": "job-research-mcp",
  "version": "1.0.0",
  "description": "MCP server for AI job research and tracking",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "dev:http": "tsc && node dist/http-server.js",
    "migrate": "tsc && node dist/db/migrate.js",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/multer": "^2.0.0",
    "better-sqlite3": "^11.0.0",
    "cheerio": "^1.0.0",
    "diff-match-patch": "^1.0.5",
    "express-rate-limit": "^8.2.1",
    "file-type": "^21.1.1",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "pdf-parse": "^2.4.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
